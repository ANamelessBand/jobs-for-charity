<script type="text/javascript" src="/js/slider-update.js"></script><% task = locals[:task] %><div class="pull-left">  <img src=<%= "/img/tasks/#{2}.jpg" %> style="max-height:250px" /></div><div class="pull-left from-left-1">  <table class="table table-striped">    <tr>      <th>Status</th>      <td>        <%= task.status_string %>      </td>    </tr>    <tr>      <th>Employer</th>      <td>        <%= task.user.username %>      </td>    </tr>    <tr>      <th>Supports</th>      <td>        <% if task.user.charity_types.empty? %>          no information        <% else %>        <%= task.user.charity_types.map(&:name).join(", ") %>      <% end %>      </td>    </tr>    <tr>      <th>Location</th>      <td>        <%= task.location %>      </td>    </tr>    <tr>      <th>Reward</th>      <td>        <%= sprintf("$ %0.02f", task.reward.to_f) %>      </td>    </tr>    <% if logged_user and (logged_user == task.user or logged_user == task.asignee) %>    <tr>      <td><button class="btn btn-success">Task done!</button></td>      <td><button class="btn btn-danger">Task was not completed.</button></td>    </tr>    <% end %>  </table></div><div class="clearfix"></div><p></p><div class="panel panel-primary">  <div class="panel-heading">    <h3 class="panel-title">Description</h3>  </div>  <div class="panel-body">    <%= task.description %>  </div></div><% if logged? && logged_user != task.user %><div class="panel panel-primary">  <div class="panel-heading">    <h3 class="panel-title">Applly now</h3>  </div>  <div class="panel-body">    <table class="table table-striped book-details">      <tr>        <th>          How much would you like to donate?        </th>        <td>          <input style="width:80%" id="donatePercSlider" type="range" oninput="donationPercUpdateSlider()" min="<%= MINIMAL_DONATION_PERCENT %>" max="100" value="<%= DEFAULT_DONATION_PERCENT %>"></input>&nbsp;          <span id="donatePercBox"><%= DEFAULT_DONATION_PERCENT %>%</span>        </td>      </tr>      <tr>        <th>To which charity?</th>        <td>          <input type="text" class="form-control" id="selectedCharity"></input>        </td>      </tr>      <tr>        <th>Motivation</th>        <td>          <input type="text" class="form-control" id="motivation"></input>        </td>      </tr>      <tr>        <td><button class="btn btn-primary">Apply</button></td>      </tr>    </table>  </div></div><% end %><% if logged_user == task.user %>  <div class="panel panel-primary">    <div class="panel-heading">      <h3 class="panel-title">Pending applications</h3>    </div>    <div class="panel-body">      <% if task.applications.nil? %>        <p>No applications yet.<p>      <% else %>        <table class="table table-striped from-top-2">          <thead>            <tr>              <th>Applicant</th>              <th>Motivation</th>              <th>Donates</th>              <th>Actions</th>            </tr>          </thead>          <tbody>            <% task.applications.each do |application| %>              <tr>                <td><a href="#"><%= application.user.username %></a></td>                <td>                  <%= application.motivation %>                </td>                <td>                  <%= sprintf("%i\%", application.share.to_f * 100) %>                </td>                <td>                  <button class="btn btn-success">Accept</button>                  <button class="btn btn-danger">Reject</button>                </td>              </tr>            <% end %>          </tbody>        </table>      <% end %>    </div>  </div><% end %></div>