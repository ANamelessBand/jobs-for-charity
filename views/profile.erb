<div class="col-md-2">
  <a href="#" class="thumbnail"><img src=<%= "/img/users/#{@user.id}.png" %> alt="..." /></a>
  <h3 class="text-center user-name"><%= @user.username %></h3>
</div>
<div class="col-md-10">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#stats" data-toggle="tab">Stats</a></li>
    <li><a href="#employer" data-toggle="tab">Employer record</a></li>
    <li><a href="#employee" data-toggle="tab">Employee record</a></li>
  </ul>
  <div class="tab-content">

    <div class="tab-pane active col-md-12" id="stats">
      <table class="table table-striped book-details">
        <tr>
          <th>
            Completed tasks
          </th>
          <td>
            <%= @user.completed_tasks.count %>
          </td>
        </tr>
        <tr>
          <th>
            Total donated amount
          </th>
          <td>
            <%= sprintf("$ %0.02f", @user.applications_donation.to_f) %>
          </td>
        </tr>
        <tr>
          <th>
            Average rating
          </th>
          <td>
            <%= @user.applications_rating %>
          </td>
        </tr>
      </table>
    </div>

    <div class="tab-pane col-md-12" id="employer">
      <%= show_tasks_table @user.tasks %>
    </div>

    <div class="tab-pane col-md-12" id="employee">
      <%= show_applications_table @user.applications %>
    </div>

  </div>
</div>
