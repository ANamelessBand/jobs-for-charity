<script type="text/javascript" src="/js/slider-update.js"></script><script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script><% if !@current_user.nil? %><script type="text/javascript">$(function(){	$('#selectedCharity').autocomplete({		source: [ <% @current_user.interested_in_charities.each do |charity| %> "<%=  charity.title %>", <% end %> ]	});});</script><% end %><div class="pull-left">  <img src=<%= "/img/tasks/#{2}.jpg" %> style="max-height:250px" /></div><div class="pull-left from-left-1">  <table class="table table-striped book-details">    <tr>      <th>Status</th>      <td>        <%= task.status_string %>      </td>    </tr>    <tr>      <th>Employer</th>      <td>        <%= to_user_link task.user %>      </td>    </tr>    <tr>      <th>Supports</th>      <td>        <% if task.user.charity_types.empty? %>          no information        <% else %>        <%= task.user.charity_types.map(&:name).join(", ") %>      <% end %>      </td>    </tr>    <tr>      <th>Location</th>      <td>        <%= task.location %>      </td>    </tr>    <tr>      <th>Reward</th>      <td>        <%= sprintf("$ %0.02f", task.reward.to_f) %>      </td>    </tr>  </table></div><div class="clearfix"></div><p></p><div class="panel panel-primary">  <div class="panel-heading">    <h3 class="panel-title">Description</h3>  </div>  <div class="panel-body">    <%= task.description %>  </div></div>  <% if task.approved_application %>    <div class="panel panel-primary">      <div class="panel-heading">        <h3 class="panel-title">Accepted Application</h3>      </div>      <div class="panel-body">        <table class="table table-striped from-top-2">          <thead>            <tr>              <th>Applicant</th>              <th>Motivation</th>              <th>Charity</th>              <th>Donates</th>              <% if task.user == logged_user && task.state == 1 %>                <th>Actions</th>              <% end %>            </tr>          </thead>          <tbody>            <tr>              <td><%= to_user_link task.approved_application.user %></a></td>              <td>                <%= task.approved_application.motivation %>              </td>              <td>                <%= task.approved_application.charity.title %>              </td>              <td>                <%= sprintf("%i\%", task.approved_application.share.to_f * 100) %>              </td>              <% if task.user == logged_user && task.state == 1 %>                <td>                  <form method="POST" <%= "action='/tasks/complete/#{task.id}'" %> />                    <button class="btn btn-success" name="accept" type="submit">Completed</button>                    <button class="btn btn-danger" name="reject" type="submit">Canceled</button>                  </form>                </td>              <% end %>            </tr>          </tbody>        </table>      </div>    </div>  <% end %>  <% if task.state.zero? %>    <div class="panel panel-primary">      <div class="panel-heading">        <h3 class="panel-title">Pending applications</h3>      </div>      <div class="panel-body">        <% if task.new_applications.empty? %>          <p>No applications yet.<p>        <% else %>          <table class="table table-striped from-top-2">            <thead>              <tr>                <th>Applicant</th>                <th>Motivation</th>                <th>Charity</th>                <th>Donates</th>                <% if task.user == logged_user %>                  <th>Actions</th>                <% end %>              </tr>            </thead>            <tbody>              <% task.new_applications.each do |application| %>                <tr>                  <td><%= to_user_link application.user %></a></td>                  <td>                    <%= application.motivation %>                  </td>                  <td>                    <% if application.charity %>                    <%= application.charity.title %>                      <a href=<%= "#modal_#{application.charity.id}" %> class="btn btn-xs btn-primary" title="описание" data-toggle="modal">                        <%= glyphicon_span 'info-sign' %>                      </a>                     <div class="modal fade" id=<%= "modal_#{application.charity.id}" %>>                        <div class="modal-dialog">                          <div class="modal-content">                            <div class="modal-header">                              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>                              <h4 class="modal-title"><%= application.charity.title %></h4>                            </div>                            <div class="modal-body">                              <p>                              <div class="pull-left from-right-1">                                <img src=<%= "/img/users/#{1}.png" %> style="max-height:250px" />                              </div>                              <%= application.charity.description %>                              </p>                            </div>                            <div class="modal-footer">                              <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>                            </div>                          </div>                        </div>                      </div>                      <% end %>                  </td>                  <td>                    <%= sprintf("%i\%", application.share.to_f * 100) %>                  </td>                  <% if task.user == logged_user %>                    <td>                      <form method="POST" <%= "action='/tasks/review_application/#{application.id}'" %> />                        <button class="btn btn-success" name="accept" type="submit">Accept</button>                        <button class="btn btn-danger" name="reject" type="submit">Reject</button>                      </form>                    </td>                  <% end %>                </tr>              <% end %>            </tbody>          </table>        <% end %>      </div>    </div>  <% end %><% if task.state.zero? && logged? && logged_user != task.user && task.new_applications.none? { |application| application.user.id == logged_user.id} %><div class="panel panel-primary">  <div class="panel-heading">    <h3 class="panel-title">Applly now</h3>  </div>  <div class="panel-body">    <form method="POST" action="/tasks/add_application">      <input type="hidden" name="task_id" <%= "value='#{task.id}'" %>/>      <table class="table table-striped book-details">        <tr>          <th>            How much would you like to donate?          </th>          <td>            <input style="width:80%" id="donatePercSlider" type="range" name="share" oninput="donationPercUpdateSlider()" min="<%= MINIMAL_DONATION_PERCENT %>" max="100" value="<%= DEFAULT_DONATION_PERCENT %>"></input>&nbsp;            <span id="donatePercBox"><%= DEFAULT_DONATION_PERCENT %>%</span>          </td>        </tr>        <tr>          <th>To which charity?</th>          <td>            <input type="text" name="charity" class="form-control" id="selectedCharity"></input>          </td>        </tr>        <tr>          <th>Motivation</th>          <td>            <input type="text" name="motivation" class="form-control" id="motivation"></input>          </td>        </tr>        <tr>          <td><button class="btn btn-primary">Apply</button></td>        </tr>      </table>    </form>  </div></div><% end %></div>