<div class="col-md-6">  <div class="panel panel-default">    <div class="panel-heading">Sign up</div>    <div class="panel-body">          <form method="POST" action="/user/register">      <table class="table table-striped table-hover vertical-middle">        <tr>          <td>Username</td><td><input name="username" type="text" required="true" class="form-control"></input></td>        </tr>        <tr>          <td>Password</td><td><input name="password" type="password" required="true" class="form-control"></input></td>        </tr>        <tr>          <td>Password again</td><td><input name="confirm_password" type="password" required="true" class="form-control"></input></td>        </tr>        <tr>          <td>E-mail</td><td><input type="email" name="email" required="true" class="form-control"></input></td>        </tr>        <tr>          <td colspan="2"><button class="btn btn-primary">Sign up</button></td>        </tr>      </table>    </form>    </div>  </div></div><div class="col-md-6">  <div class="panel panel-default">    <div class="panel-heading">Sign in</div>    <div class="panel-body">    <form method="POST" action="/user/login">      <table class="table table-striped table-hover vertical-middle">        <tr>          <td>Username</td><td><input name="username" type="text" required="true" class="form-control"></input></td>        </tr>        <tr>          <td>Password</td><td><input name="password" type="password" required="true" class="form-control"></input></td>        </tr>        <tr>          <td colspan="2"><button class="btn btn-primary">Sign in</button></td>        </tr>      </table>    </form>		</div>  </div></div>