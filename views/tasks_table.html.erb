<% if tasks_collection.empty? %>
  <div class="alert alert-warning">
  No tasks found
  </div>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>        
        <th>Owner</th>
        <th>Charity types</th>
        <th>Reward</th>
      </tr>
    </thead>
    <tbody>
      <% tasks_collection.each do |task| %>
        <tr>
          <td><%= to_link "/tasks/#{task.id}", task.title %></td>
          <td><%= to_link "/user/#{task.user.id}", task.user.username %></td>
          <td><%= task.user.charity_types.map(&:name).join", " %></a></td>
          <td><%= sprintf("$ %0.02f", task.reward.to_f) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
