<% if @tasks.empty? %>
  <div class="alert alert-warning">
  No tasks found
  </div>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Charities</th>
        <th>Reward</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.user.charity_types.map(&:name).join", " %></a></td>
          <td><%= sprintf("$ %0.02f", task.reward.to_f) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
