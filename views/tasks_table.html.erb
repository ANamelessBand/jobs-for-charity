<% if @tasks.empty? %>
  <div class="alert alert-warning">
  No tasks found
  </div>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Charity</th>
        <th>Reward</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task[:title] %></td>
          <td><%= task[:charity] %></a></td>
          <td><%= task[:reward] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
